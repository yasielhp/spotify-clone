---
import Time from '@/icons/time.astro'
import { type Song } from '@/lib/data'

interface Props {
	songs: Song[]
}

const { songs } = Astro.props
---

<table class="min-w-full table-auto divide-y divide-gray-500/20 text-left">
	<thead class="">
		<tr class="text-sm text-zinc-400">
			<th class="px-4 py-2 font-light">#</th>
			<th class="px-4 py-2 font-light">Título</th>
			<th class="px-4 py-2 font-light">Álbum</th>
			<th class="px-4 py-2 font-light"><Time /></th>
		</tr>
	</thead>

	<tbody>
		<tr class="h-[16px]"></tr>
		{
			songs.map((song, index) => (
				<tr class="border-spacing-0 overflow-hidden text-sm font-light text-gray-300 transition duration-300 hover:bg-white/10">
					<td class="w-5 rounded-bl-lg rounded-tl-lg px-4 py-2">{index + 1}</td>
					<td class="flex gap-3 px-4 py-2">
						<picture class="">
							<img src={song.image} alt={song.title} class="h-11 w-11" />
						</picture>
						<div class="flex flex-col">
							<h3 class="text-base font-normal text-white">{song.title}</h3>
							<span>{song.artists.join(', ')}</span>
						</div>
					</td>
					<td class="px-4 py-2">{song.album}</td>
					<td class="rounded-br-lg rounded-tr-lg px-4 py-2">{song.duration}</td>
				</tr>
			))
		}
	</tbody>
</table>
